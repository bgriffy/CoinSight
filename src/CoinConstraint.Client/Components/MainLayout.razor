@inherits LayoutComponentBase

<MediaQueryList>
    <div class="page">
        <AuthorizeView >
            <NotAuthorized>
                <div class="main">
                    <div class="top-row px-4">
                        <LoginDisplay />
                        <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
                    </div>

                    <div class="content px-4">
                        @Body
                    </div>
                </div>
            </NotAuthorized>
            <Authorizing>
                <LoadSpinnerComponent LoadSpinnerIsHidden=false LoadMessage=""/>
            </Authorizing>
            <Authorized>
                <div class="sidebar">
                    <NavMenu />
                </div>

                <div class="main">
                    <div class="top-row px-4">
                        <LoginDisplay />
                        <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
                    </div>

                    <div class="content px-4">
                        @Body
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</MediaQueryList>

