@page "/register"
@using CoinConstraint.Application.Identity
@using CoinConstraint.Application.Requests
@inject ICCAuthenticationService AuthService
@inject NavigationManager NavigationManager

@if (ShowErrors)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in Errors)
        {
            <p>@error</p>
        }
    </div>
}

<div class="registration-container">
    <div class="card registration-card">
        <div class="card-body">
            <h2 class="mb-3">Register</h2>
            <p class="mb-4">Already have an account? <a href="Login">Sign In</a>.</p>
            <EditForm Model="RegisterRequest" OnValidSubmit="HandleRegistration">
                <DataAnnotationsValidator />
                <Microsoft.AspNetCore.Components.Forms.ValidationSummary />
                <div class="form-group">
                    <label for="email">Email address</label>
                    <InputText Id="email" class="form-control" @bind-Value="RegisterRequest.Email" />
                    <ValidationMessage For="@(() => RegisterRequest.Email)" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <InputText Id="password" type="password" class="form-control" @bind-Value="RegisterRequest.Password" />
                    <ValidationMessage For="@(() => RegisterRequest.Password)" />
                </div>
                <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <InputText Id="password" type="password" class="form-control" @bind-Value="RegisterRequest.ConfirmPassword" />
                    <ValidationMessage For="@(() => RegisterRequest.ConfirmPassword)" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </EditForm>
        </div>
    </div>
</div>

<style>
    .registration-container {
        display: flex;
        justify-content: center;
    }

    .registration-card {
        padding: 6rem;
    }

    .form-group{
        margin-bottom: 2rem;
    }
</style>
